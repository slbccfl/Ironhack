<h1> Movie Trivia </h1>
<h3> Which of these movies was released in <%=@release_year%>?</h3>

<form method="post">
	<% @movies_to_display.each_with_index do |the_movie, index| %>
		<!-- <img name=index src="<%= the_movie.poster %>" height=350 width=300> -->
		<a href="/search_results/<%= index%>">
			<input type="image" src="<%= the_movie.poster %>" height=350 width=300>
		</a>
		<% if (index+1) % 3 == 0 %>
	 		<br>
	 	<% end %> 
	<% end %>
</form>
