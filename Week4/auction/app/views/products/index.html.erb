<h1>All Products</h1>

<ul>
<% @products.each do |product| %>

	<li>
		<%= link_to product.id, products_show_path(product.id) %> - 
		<%= product.title %> - 
		<%= product.description %> - Bidding deadline: 
		<%= product.deadline %> - Product owned by: 
		<%= product.user_id %> 
	</li>
<% end %>
</ul>